@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "Item";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}

<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-file-text mr-1"></i>Admin Console</a></li>
        <li class="breadcrumb-item active" aria-current="page">Item List</li>
    </ol>
   
</div>

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Order List</div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="Order_Tb" class="table table-striped table-bordered nowrap dataTable no-footer dtr-inline" style="width:100%">
                        <thead>
                            <tr>
                                <th>Vendor Name</th>
                                <th>Location Name</th>
                                <th>Customer Name</th>
                                <th>Customer Mob</th>
                                <th>Item Name</th>
                                <th>Payment Method</th>
                                <th>Order Status</th>
                                <th>Quantity</th>
                                <th>Total Amount</th>
                               
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        //List
        loadItem()
        function loadItem() {
            var table = $('#Order_Tb').DataTable();
            table.destroy();
            table = $('#Order_Tb').dataTable({
                "paginationType": "full_numbers",
                "dom": 'Bfrtip',
                "buttons": ['copy', 'csv', 'excel', 'pdf', 'print'],
                "searching": true,
                "paging": true,
                "sort": true,
                "info": true,
                "ajax": {
                    "url": '@apiUrl/api/Order/AllOrderList',
                    "type": "GET",
                    "dataType": "json",
                    "headers": {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
                    "error": function (data) {
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        }
                    }
                },
                "order": [],
                "columns": [
                    { "data": "vendorName", "orderable": true },
                    { "data": "locationName", "orderable": true },
                    { "data": "customerName", "orderable": true },
                    { "data": "customerMob", "orderable": true },
                    { "data": "itemName", "orderable": true },
                    { "data": "paymentMethodName", "orderable": true },
                    { "data": "orderStatus", "orderable": true },
                    { "data": "quantity", "orderable": true },
                    { "data": "totalAmount", "orderable": true },
                   
                   
                    //{
                    //    "render": function (data, type, row) {
                    //        return '<a class="btn btn-sm btn-primary" href="../Order/OrderEdit?orderId=' + row.orderId + '"><i class="fa fa-edit"></i></a>' + '&nbsp&nbsp<button class="btn btn-sm btn-danger" data-toggle="modal" data-target="#delete" data-id="' + row.orderId + '"><i class="fa fa-trash"></i></button>';
                    //    }
                    //}
                ]
            });
        }

        //Delete

        $('#Item_Tb tbody').on('click', 'button[data-target="#delete"]', function () {
            var id = $(this).data('id');
            swal({
                html: true,
                title: "Are you sure?",
                text: "You will not be able to recover this data!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, confirm it!",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "GET",
                    url: "@apiUrl/api/Item/DeleteItem/" + id + "/" + @Context.Session.GetInt32("UserId"),
                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
                    dataType: "json",
                    success: function (data, statusText, xhr) {
                        if (xhr.status == 200) {
                            $('#Item_Tb').DataTable().ajax.reload(null, false);
                            $('#delete').modal('hide');
                            sweetAlert({
                                html: true,
                                title: "Item",
                                text: "Successfully deleted!",
                                type: "success"
                            });
                        } else if (xhr.status == 202) {
                            sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        } else {
                            sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                        }
                    },
                    error: function (data) {
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        }
                    }
                });
            });
        });
    </script>
}

