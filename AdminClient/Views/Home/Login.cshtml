@{
    Layout = null;
}



<!doctype html>
<html lang="en" dir="ltr">
<head>

    <!-- Meta data -->
    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0'>
    <meta content="Admin Console – Savhome" name="description">
    <meta content="Appman Technologies Private Limited" name="author">
    <meta name="keywords" content="Restaurant" />

    <!--favicon -->
   @*  <link rel="icon" href="~/LummangImages/Tittel Logo.png" type="image/x-icon" /> *@

    <!-- TITLE -->
    <title>Restaurant</title>

    <!-- DASHBOARD CSS -->
    <link href="~/css/style.css" rel="stylesheet" />

    <link href="~/css/color-skins/color1.css" rel="stylesheet" />
    <link href="~/css/skins-modes.css" rel="stylesheet" />

    <!-- SINGLE-PAGE CSS -->
    <link href="~/plugins/single-page/css/single-page.css" rel="stylesheet" type="text/css">

    <!--- FONT-ICONS CSS -->
    <link href="~/css/icons.css" rel="stylesheet" />

    <style>

        .login100-form {
            width: 320px;
            height: 297px;
            padding-top: 33px;
        }

        .btn-primary {
            color: #fff;
            background: #18a396b3 !important;
            border-color: #18a396b3 !important;
            border-radius: 21px;
            font-size: 16px !important;
            /* font-weight: bold; */
        }

        .login100-form-btn {
            text-transform: uppercase;
            padding: 0 0px;
        }

        .header-brand-img {
            height: 10.5rem;
            line-height: 2rem;
            vertical-align: middle;
            margin-right: 0rem;
            width: 45%;
        }

        .wrap-login100.p-6 {
            margin-top: -100px;
        }
    </style>
    <style>
        span.Showpassword {
            float: left;
            color: #011fbe;
        }

        body {
            background-image: url("../images/pic/cuisine.jpg");
            background-repeat:no-repeat;
            background-size:100%    
        }
    </style>

    
</head>
<body class="app dark-mode">

    <div class="login-img">
        
        <!-- GLOABAL LOADER -->
        <div id="global-loader">
           @*  <img src="~/images/svgs/loader.svg" class="loader-img" alt="Loader"> *@
        </div>

        <div class="page h-100">
            <div class="">
                <!-- CONTAINER OPEN -->
               
                <div class="container-login100">
                    <div class="wrap-login100 p-6">
                        <div class="text-center">
                           @*  <img src="~/LummangImages/Lummang icon.png" class="header-brand-img" alt=""> *@
                        </div>
                        <form class="login100-form validate-form" action="/" method="POST">
                            <span class="login100-form-title">
                                Admin Login
                            </span>
                            <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">

                                <input class="input100" type="text" name="username" placeholder="Username" required>
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="zmdi zmdi-email" aria-hidden="true"></i>
                                </span>
                            </div>
                            <div class="wrap-input100 validate-input" data-validate="Password is required">
                                <input class="input100" type="password" name="password" id="psw" placeholder="Password" required>
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="zmdi zmdi-lock" aria-hidden="true"></i>
                                </span>
                            </div>
                            <div class="text-right pt-1">
                                <span class="Showpassword"> <input type="checkbox" onclick="myFunction()"> Show Password</span>
                                <p class="mb-0"><a href="forgot-password.html" class="text-primary ml-1">Forgot Password?</a></p>
                            </div>
                            <div class="container-login100-form-btn">
                                <button type="submit" class="login100-form-btn btn-primary">Sign In</button>
                            </div>
                            <div class=" flex-c-m text-center mt-3">
                                <div class="login-logo">

                                    <p class="text-danger">@ViewBag.ErrorMessage</p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- CONTAINER CLOSED -->
            </div>
        </div>
    </div>
    <script>
        function myFunction() {
            var x = document.getElementById("psw");
            if (x.type === "password") {
                x.type = "text";
            }
            else {
                x.type = "password";
            }
        }
    </script>
    <!-- BACKGROUND-IMAGE CLOSED -->
    <!-- JQUERY SCRIPTS JS-->
    <script src="~/js/vendors/jquery-3.2.1.min.js"></script>

    <!-- BOOTSTRAP SCRIPTS JS-->
    <script src="~/js/vendors/bootstrap.bundle.min.js"></script>

    <!-- SPARKLINE JS-->
    <script src="~/js/vendors/jquery.sparkline.min.js"></script>

    <!-- CHART-CIRCLE JS-->
    <script src="~/js/vendors/circle-progress.min.js"></script>

    <!-- RATING STAR JS-->
    <script src="~/plugins/rating/rating-stars.js"></script>

    <!-- INPUT MASK JS-->
    <script src="~/plugins/input-mask/input-mask.min.js"></script>

    <!-- CUSTOM JS-->
    <script src="~/js/custom.js"></script>

</body>
</html>
